@using CHBHTH.Models;
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<CHBHTH.Models.SanPham>
@{ ViewBag.Title = "Cửa hàng vật liệu";

    Layout = "~/Views/Shared/_Layout1.cshtml"; }

@foreach (var item in Model)
{
<div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat ">
    <div class="featured__item" style="background-color: white !important; border-radius: 10px; box-shadow: 0 1px 15px rgba(0,0,0,.12);">
        <div class="featured__item__pic set-bg" style=" border-radius: 10px ">
            <a href="@Url.Action("xemchitiet","sanpham" ,new { @MaSP = item.MaSP })">
                <center>
                    <img src="@Url.Content("~" + item.AnhSP.ToString())" class="img-fluid" alt="" style="width: 100%; height: 200px;" />
                </center>
            </a>
            <div class="featured__item__pic__hover">
                <div class="text-center">
                    @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMaSP = item.MaSP, @strURL = Request.Url.ToString() }))
                    {
    <input type="submit" value="Thêm vào giỏ hàng" id="bgnGioHang" class="btn btn-outline-dark mt-auto" />}
                </div>
            </div>
        </div>
        <div class="featured__item__text">
           
            <h6><a href="#">@item.TenSP</a></h6>
            <h5 style="color: #F7452F">@item.GiaBan ₫</h5>
        </div>
    </div>
</div>}
<div class="product__pagination">
    @Html.PagedListPager(Model, sotrang => Url.Action("Index", new { page = sotrang }))
</div>
